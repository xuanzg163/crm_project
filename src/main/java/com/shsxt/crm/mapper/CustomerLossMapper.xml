  <!--批量将流失客户插入到新表中-->
  <insert id="saveBatch" parameterType="list">
    insert into t_customer_loss (cus_no, cus_name, cus_manager, state, is_valid,  create_date, update_date)
    values
    <foreach collection="list" item="item" separator=",">
      (#{item.cusNo},
      #{item.cusName},
      #{item.cusManager},
      #{item.state},
      #{item.isValid},
      #{item.createDate},
      #{item.updateDate})
    </foreach>
  </insert>

  <!--查询流失客户分页-->
  <select id="queryByParams" parameterType="CustomerLossQuery" resultMap="BaseResultMap">
    select * from t_customer_loss
    <where>
      is_valid=1
      <if test="null!=cusNo and ''!=cusNo">
        and cus_no like concat('%',#{cusNo},'%')
      </if>
      <if test="null!=cusName and ''!=cusName">
        and cus_name like concat('%',#{cusName},'%')
      </if>
      <if test="null!=createDate and ''!=createDate">
        and create_date &lt;= #{createDate}
      </if>
    </where>
