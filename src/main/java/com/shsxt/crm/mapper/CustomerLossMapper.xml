  <update id="update" parameterType="com.shsxt.crm.po.CustomerLoss" >
    update t_customer_loss
    <set >
      <if test="cusNo != null" >
        cus_no = #{cusNo},
      </if>
      <if test="cusName != null" >
        cus_name = #{cusName},
      </if>
      <if test="cusManager != null" >
